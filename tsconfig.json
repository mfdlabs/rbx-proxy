{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "noUnusedLocals": true,
    "stripInternal": true,
    "removeComments": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "@lib/*": ["./src/lib", "./src/lib/*"]
    }
  },
  "include": ["src/"],
  "exclude": ["src/test/"]
}
